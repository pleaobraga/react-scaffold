{
    "verbose": true,
    "clearMocks": true,
    "transform": {
        "^.+\\.jsx?$": "babel-jest"
    },
    "collectCoverageFrom": [
        "**/*.{js,jsx}",
        "!**/node_modules/**",
        "!**/vendor/**",
        "!**/index.js",
        "!**/coverage/**",
        "!**/webpack**",
        "!**/mocks/**"
    ],
    "setupFilesAfterEnv": [
        "<rootDir>/setupTests.js"
    ],
    "moduleNameMapper": {
        "^.+\\.(css|scss)$": "<rootDir>/src/mocks/styleMock.js",
        "^.+\\.(gif|ttf|eot|svg|png)$": "<rootDir>/src/mocks/fileMock.js"
    }
}